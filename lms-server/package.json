{
  "name": "lms-server",
  "version": "1.0.0",
  "description": "Backend for LMS",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "start": "node dist/server.js",
    "watch:ts": "tsc --watch",
    "watch:serve": "nodemon dist/server.js",
    "copy-assets": "copyfiles -u 1 src/**/*.env dist",
    "watch:assets": "nodemon -e env -w src --exec \"npm run copy-assets\"",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:serve\" \"npm run watch:assets\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/multer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "fs": "^0.0.1-security",
    "googleapis": "^166.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.11",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
